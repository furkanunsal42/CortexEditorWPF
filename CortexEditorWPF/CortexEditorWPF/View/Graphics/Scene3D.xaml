<UserControl x:Class="CortexEditorWPF.View.Graphics.Scene3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CortexEditorWPF.View.Graphics"
             mc:Ignorable="d" 
             d:DesignHeight="512" d:DesignWidth="512">
    <Grid>
        <Grid>
            <Rectangle Fill="{DynamicResource Palate3Brush}"/>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Text="3D Scene" FontSize="32" FontWeight="Bold" Foreground="{DynamicResource TextColor_A20Brush}"/>
        </Grid>
    </Grid>
</UserControl>
